<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password hash</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |f| %>
      <tr>
      	<td><%= f.name %></td>
        <td><%= f.email %></td>
        <td><%= f.password_hash %></td>
           
        <td><%= link_to 'Edit', edit_test_path(f) %></td>
        <td><%= link_to 'Destroy', f, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %> 
  </tbody>
</table>

